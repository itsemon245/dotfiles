[Nemo Action]
Active=true
Name=Compress to tar.zst (Pro)
Comment=Aggressive compression using zstd-compress script
Icon-Name=archive-insert
Selection=notnone
Extensions=any;

# We set Terminal=true to allow the fallback mechanism to work.
# If Zenity runs, this terminal window will sit in the background (safe).
# If Zenity fails, this window becomes the progress bar.
Terminal=false

# We call our new script and pass the --gui flag
Exec=/home/emon/bin/zstd-compress %F --gui
